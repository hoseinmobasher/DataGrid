<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="@attr/dataGridViewStyle">@style/DataGridStyle</item>
        <item name="@attr/dataGridHeaderStyle">@style/DataGridHeaderStyle</item>
        <item name="@attr/dataGridFieldStyle">@style/DataGridFieldStyle</item>
        <item name="@attr/dataGridRowDividerStyle">@style/DataGridRowDivider</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="DataGridRowDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="DataGridHeaderStyle" parent="@android:style/Widget.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DataGridFieldStyle" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/datagrid_field_background</item> -->
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DataGridStyle">
        <item name="android:background">@drawable/datagrid_background</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>